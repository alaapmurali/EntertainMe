{
    "manifest_version": 2,

    "name": "Entertain Me",
    "description": "An extension to brighten your day",
    "version": "1.0",
    "background": {
        "page": "popup.html"
        // "scripts": ["popup.js"]
    },

    "browser_action": {
        "default_icon": "icon.jpg",
        "default_popup": "popup.html",
        "default_title": "Entertain Me"
    },
    "permissions": [
        "background",
        "https://api.icndb.com/"
    ]
}